ruby '2.3.1'
source 'https://rubygems.org'

# BCrypt
gem 'bcrypt'

# PostgreSQL driver
gem 'pg'

# Bootstrap SASS and Compass for frontend
gem 'bootstrap', '~> 4.0.0.alpha3'
gem "compass"

# Sinatra driver
gem 'sinatra'
gem 'sinatra-contrib'

# Use Thin for our web server
gem 'thin'

gem 'activesupport', '~>4.1'
gem 'activerecord', '~>4.1'

gem 'rake'

gem 'shotgun'

group :test do
  gem 'faker'
  gem 'rspec'
end
